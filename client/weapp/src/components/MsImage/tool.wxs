function getSrc(src, placeholderUrl) {
  return src || placeholderUrl || ''
}

function getMode(mode) {
  return mode || 'aspectFill'
}

function asBool(value) {
  return !!value
}

function getStyle(width, height) {
  return 'display:block;width:' + (width || '100%') + ';height:' + (height || 'auto') + ';'
}

module.exports = {
  getSrc: getSrc,
  getMode: getMode,
  asBool: asBool,
  getStyle: getStyle,
}
